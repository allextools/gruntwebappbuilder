#!/usr/bin/env node

'use strict';

var lib = require('allexlib'),
  Node = require('allex_nodehelpersserverruntimelib')(lib),
  Fs = Node.Fs,
  Path = Node.Path;

Node.info('purging package.json first');
Node.executeCommandSync('allex-webapp-purge-packagejson', {stdio:'inherit'});

Node.info('removing node_modules');
Fs.removeWithCb('node_modules', ender);

function ender() {
  Node.info('all done!');
}
